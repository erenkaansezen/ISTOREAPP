@model HomeViewModel
@{
    ViewData["Title"] = "Store Page";
    Layout = "_Layout";  // Varsayılan olarak yeni layout'u kullan
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teknoloji Market</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Hero Bölümü */
        .hero {
            background: url('https://www.badebilgisayar.com/wp-content/uploads/2023/08/cropped-apple-products.webp') no-repeat center center/cover;
        color: black;
        height: 500px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        }

        /* Kategoriler Kartları */
        .category-card {
        transition: transform 0.3s ease;
        }

        .category-card:hover {
        transform: scale(1.05);
        }

        /* Yatay Kaydırmalı Ürünler */
        .scroll-container {
        display: flex;
        gap: 20px;
        overflow-x: auto;
        padding: 10px;
        scroll-behavior: smooth;
        }

        .scroll-container .card {
        flex: 0 0 auto;
        width: 18rem;
        }

    </style>
</head>
<body>
    <br />
    <a class="nav-link text-black me-4 fs-3">Merhaba,</a>
    <hr />

    <!-- Slider Bölümü -->
    <vc:Slider />

    <!-- Category Bölümü -->
    <vc:Category />

    <!-- Banner Bölümü -->
    <vc:product-banner />


    <!-- Öne Çıkarılan  Ürünler -->

    <vc:featured-products />

 


</body>
</html>
