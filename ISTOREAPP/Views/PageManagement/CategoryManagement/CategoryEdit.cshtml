@model Category
@{
    Layout = "_Layout";  // Varsayılan olarak yeni layout'u kullan
}

<br />
<h2>Category Düzenle</h2>
<hr />

<form asp-action="CategoryEdit" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model?.Id" />

    <div class="form-group">
        <label asp-for="@Model.Name">Category Adı:</label>
        <input type="text" name="Name" class="form-control" value="@Model?.Name" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Url">Category Url</label>
        <input type="text" name="Url" class="form-control" value="@Model?.Url" />
    </div>

    <div class="form-group">
        <label for="imageFile">Görsel Yükle:</label>
        <input type="file" name="imageFile" class="form-control" value="@Model.CategoryImg" />
    </div>


    <div class="form-group">
        <label asp-for="@Model.IsActive">Aktif mi?</label>
        <input type="checkbox" name="IsActive" @(Model?.IsActive == true ? "checked" : "") />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
