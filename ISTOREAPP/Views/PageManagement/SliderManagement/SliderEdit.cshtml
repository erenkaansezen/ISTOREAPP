@model ISTOREAPP.Data.Entities.Slider
@{
    Layout = "_LayoutAdmin";  // Varsayılan olarak yeni layout'u kullan
}

<br />
<h2>Slider Ekleme</h2>
<hr />

<form asp-action="SliderEdit" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label asp-for="@Model.SliderImgName">Slider Adı:</label>
        <input asp-for="@Model.SliderImgName" class="form-control" value="@Model?.SliderImgName" />
    </div>

    <div class="form-group">
        <label asp-for="SliderImg">Ürün Görseli</label>
        <input type="file" name="imageFile" class="form-control" value="@Model?.SliderImg" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
