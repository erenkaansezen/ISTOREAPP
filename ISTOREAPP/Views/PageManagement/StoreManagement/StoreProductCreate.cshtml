
@model Product
@{
    Layout = "_LayoutAdmin";  // Varsayılan olarak yeni layout'u kullan
}

<br />
<h2>Ürün Ekle</h2>
<hr />
<a asp-action="StorePageManagement" class="btn btn-outline-secondary">Geri Dön</a>
<br />
<br />
<form asp-action="StoreProductCreate" method="post" enctype="multipart/form-data">
    <input type="hidden" name="SliderImgId" value="@Model?.Id" />

    <div class="form-group">
        <label for="Name">Ürün Adı</label>
        <input type="text" name="Name" class="form-control" value="@Model?.Name" />
    </div>
    <br />
    <div class="form-group">
        <label for="Description">Ürün Açıklaması</label>
        <input type="text" name="Features" class="form-control" value="@Model?.Features" />
    </div>
    <br />
    <div class="form-group">
        <label for="Description">Ürün Özellikleri</label>
        <input type="text" name="Description" class="form-control" value="@Model?.Description" />
    </div>
    <br />
    <div class="form-group">
        <label for="CategoryId">Kategori Id</label>
        <input type="text" name="CategoryId" class="form-control" value="@Model?.CategoryId" />
    </div>
    <br />
    <div class="form-group">
        <label for="imageFile">Ürün Görseli</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label for="Price">Ürün Fiyatı:</label>
        <input type="text" name="Price" class="form-control" value="@Model?.Price" />
    </div>
    <br />
    <div class="form-group">
        <label for="IsActive">Aktif mi?</label>
        <input type="checkbox" name="IsActive" @(Model?.IsActive == true ? "checked" : "") />
    </div>
    <br />
    <button type="submit" class="btn btn-dark">Kaydet</button>
</form>
