@model LoginViewModel
@{
    Layout = "_Layout";  // Varsayılan olarak yeni layout'u kullan
}

<br />
<h2>ISTORE'a</h2>
<h2>Hızlıca Giriş Yap</h2>
<hr />
<form asp-action="Login" method="post">

    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Password">Şifre</label>
        <input asp-for="Password" class="form-control" />
        <a asp-action="ForgatPassword">Şifremi unuttum</a>
    </div>
    <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
    </div>
    <button class="btn btn-dark">Giriş Yap</button>
</form>
