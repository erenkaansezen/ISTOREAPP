@model HomeViewModel

<!-- Kategoriler -->
<section class="container my-5">
    <h2 class="text-center mb-4">Kategoriler</h2>
    <div class="row">
        @foreach (var category in Model.Categories)
        {
            @if (category.IsActive == true)
            {
                <div class="col-md-4 mb-3">
                    <div class="card category-card shadow-sm">
                        <div>
                            <img src="~/img/Category/@category.CategoryImg" class="card-img-top" alt="@category.Name">
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title">@category.Name</h5>
                            <a href="/StorePage?category=@category.Name.ToLower()" class="btn btn-outline-dark">Ürünleri İncele</a>
                        </div>
                    </div>
                </div>
            }
            else
            {

            }

        }
    </div>
</section>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>