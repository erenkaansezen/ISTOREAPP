<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ISTORE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ISTORE.styles.css" asp-append-version="true" />
    <style>
        /* Sol Tarafa Dikey Menü */
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
        }

            .sidebar a {
                display: block;
                padding: 10px 15px;
                color: white;
                text-decoration: none;
                font-size: 16px;
            }

                .sidebar a:hover {
                    background-color: white;
                    color: #343a40;
                }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        .header {
            background-color: #343a40;
            color: white;
            padding: 10px 0;
        }

            .header .container {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

        footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        /* Dropdown Menü Stili */
        .dropdown-menu {
            background-color: #6c757d; /* Gri arka plan */
        }

        .dropdown-item {
            color: white; /* Beyaz yazılar */
        }

            .dropdown-item:hover {
                background-color: white; /* Hover rengi */
            }

        /* Dropdown açıldığında */
        .dropdown-menu.show {
            background-color: #6c757d; /* Açıldığında arka plan rengi */
        }

        /* Sayfa İçerik Yönetimi butonunu diğer butonlarla aynı boyutta yap */
        .dropdown-toggle {
            padding: 10px 15px; /* Aynı padding'i kullanarak boyut uyumunu sağla */
            font-size: 16px; /* Diğer butonlarla aynı font boyutu */
            display: inline-block;
            width: 100%; /* Butonun genişliğini ayarlayarak uyumu sağla */
        }

        .dropdown {
            width: 100%; /* Dropdown butonunun genişliğini, menü ile aynı hizaya getirelim */
        }

        /* Dropdown menüsünün genişliğini buton ile uyumlu yap */
        .dropdown-menu {
            width: 100%; /* Menü genişliğini, butonla aynı hizaya getirir */
        }

        /* Dropdown button and menu alignment */
        .dropdown-toggle:after {
            display: inline-block;
            content: '';
            margin-left: 5px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center">IStore | A D M I N</h4>
        <br />
        <ul class="nav flex-column">
            <li class="nav-item">
                <a asp-controller="Admin" asp-action="UsersList" class="btn btn-secondary btn-sm">Kullanıcı Yönetim</a>
            </li>
            <br />
            <li class="nav-item">
                <a asp-controller="Admin" asp-action="Rollers" class="btn btn-secondary btn-sm">Rol Yönetimi</a>
            </li>
            <br />
            <li class="nav-item">
                <a class="btn btn-secondary btn-sm" asp-controller="User" asp-action="Logout">LogOut</a>
            </li>
            <br />

            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    Sayfa İçerik Yönetimi
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li><a class="dropdown-item" asp-controller="PageManagement" asp-action="HomePageManagement">Ana Sayfa Yönetimi</a></li>
                    <li><a class="dropdown-item" asp-controller="PageManagement" asp-action="StorePageManagement">Mağaza Sayfası Yönetimi</a></li>
                    <li><a class="dropdown-item" href="#">İletişim Sayfası Yönetimi</a></li>
                </ul>
            </div>
        </ul>
    </div>



    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <main role="main" class="pb-3" style="color:black;">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer>
        <div class="container">
            &copy; 2024 - ISTORE - <a href="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
