@model OrderModel
@{
    ViewData["Title"] = "Store Page";
    Layout = "_Layout";  // Varsayılan olarak yeni layout'u kullan
}
<br />
<h1>IStore | Sipariş Detayı</h1>
<hr />
<div class="row">
    <div class="col-md-8">
 
        <div asp-validation-summary="All" class="text-danger"></div>

        <form method="post" asp-action="Checkout">
            <div class="row">
                <div class="col">
                    <label asp-for="@Model.User.FullName">Kullanıcı Adı</label>
                    <input asp-for="@Model.User.FullName" class="form-control" value="@Model.User.FullName"  disabled/>
                </div>
                <div class="col">
                    <label asp-for="@Model.User.Email">Kullanıcı Email</label>
                    <input asp-for="@Model.User.Email" class="form-control" value="@Model.User.Email" disabled />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    <label asp-for="@Model.City"></label>
                    <input asp-for="@Model.City" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="@Model.PhoneNumber">Kullanıcı Telefon Numarası</label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" value="@Model.User.PhoneNumber" />
                </div>
            </div>
            <br />
            <div class="mb-3">
                <label asp-for="@Model.AdressLine"></label>
                <input asp-for="@Model.AdressLine" class="form-control" />
            </div>
            <br />
            <h4 class="my-3">Ödeme Bilgileri</h4>
            <hr />
            <div class="row">
                <div class="col">
                    <label asp-for="@Model.CartName"></label>
                    <input asp-for="@Model.CartName" class=form-control>
                </div>
                <div class="col">
                    <label asp-for="@Model.CartSurname"></label>
                    <input asp-for="@Model.CartSurname" class=form-control>
                </div>
                <div class="col">
                    <label asp-for="@Model.CartNumber"></label>
                    <input asp-for="@Model.CartNumber" class=form-control>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    <label asp-for="@Model.ExpirationMonth"></label>
                    <input asp-for="@Model.ExpirationMonth" class=form-control>
                </div>
                <div class="col">
                    <label asp-for="@Model.ExpirationYear"></label>
                    <input asp-for="@Model.ExpirationYear" class=form-control>
                </div>
                <div class="col">
                    <label asp-for="@Model.Cvc"></label>
                    <input asp-for="@Model.Cvc" class=form-control>
                </div>
            </div>
            <br />
            <br />
            <br />
            <button type="submit" class="btn btn-dark w-100">Ödemeyi Tamamla</button>

        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3">Sipariş Özeti</h4>
        <ul class="list-group mb-3 list-dark">
            @foreach (var item in Model.Cart.Items)
            {
                <li class="list-group-item d-flex justify-content-between bg-dark text-light">
                    <div>
                        <h6>@item.Product.Name</h6> Adet x @item.Quantity
                    </div>
                    <span>@item.Product.Price ₺</span>
                </li>
                <br />
            }
        </ul>

    </div>
</div>